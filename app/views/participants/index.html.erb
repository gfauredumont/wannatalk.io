<p id="notice"><%= notice %></p>

<h1 class="text-center">Listing Participants</h1>

<div class="container">
  <div class="row" >
    <table>
      <thead>
        <tr>
          <th class="col-sm-offset-1 col-sm-2">Name</th>
          <th class="col-sm-2">Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @participants.each do |participant| %>
          <tr>
            <td class="col-sm-offset-1 col-sm-2"><%= participant.name %></td>
            <td class="col-sm-2"><%= participant.email %></td>
            <td class="col-sm-1"></td>
            <td class="col-sm-2 text-center"><%= link_to 'Show', participant %> | <%= link_to 'Edit', edit_participant_path(participant)%> | <%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>

<div class="text-center">
  <td><%= link_to 'New Participant', new_participant_path %> |</td>
  <td><%= link_to 'Home', root_path %></td>
</div>
